rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{messageId} {
      allow read, delete: if false;
      // Only write is allowed
      allow write: if request.auth != null && request.resource.data.uid != null && request.resource.data.uid == request.auth.uid && request.resource.data.token != null && messagePathExists(messageId) == false && request.resource.data.token == (messageId);
      
      allow update: if request.auth != null && request.resource.data.uid != null && request.resource.data.uid == request.auth.uid && request.resource.data.token != null && messagePathExists(messageId) == true && request.resource.data.token == (messageId);

      function messagePathExists(messageId){
        return exists(/databases/$(database)/documents/messages/$(messageId));
      }

    }
  }
}