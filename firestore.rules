rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{messageId} {
      allow update, delete: if false;
      // Can be done from the server side...
      allow read: if request.auth != null && resource.data.uid != null && resource.data.token != null && request.auth.uid == resource.data.uid
      allow write: if request.auth != null && request.resource.data.uid != null && request.resource.data.uid == request.auth.uid && request.resource.data.token != null ;
    }
  }
}